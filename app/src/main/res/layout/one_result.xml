<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/resultImage"
        android:layout_width="139dp"
        android:layout_height="145dp"
        android:layout_marginLeft="20dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/resultName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="@drawable/flame_style"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        app:layout_constraintLeft_toRightOf="@id/resultImage"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/resultDifficult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="@drawable/flame_style"
        app:layout_constraintLeft_toLeftOf="@id/resultName"
        app:layout_constraintTop_toBottomOf="@id/resultName"
        />

    <TextView
        android:id="@+id/resultTimeCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="@drawable/flame_style"
        app:layout_constraintLeft_toLeftOf="@id/resultName"
        app:layout_constraintTop_toBottomOf="@id/resultDifficult"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>